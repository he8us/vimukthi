{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "mocha"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:mocha/recommended"
  ],
  "rules": {
    "strict": 1,
    "no-console": 0,
    "no-unused-vars": 1,
    "semi": 1,
    "semi-style": 1,
    "semi-spacing": 1
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
